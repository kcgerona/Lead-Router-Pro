# Production Environment Variables for Lead Router Pro

# GHL API Configuration (preserve existing keys)
GHL_PRIVATE_TOKEN=
GHL_LOCATION_API=
GHL_LOCATION_ID=
GHL_AGENCY_API_KEY=

# Pipeline and Stage IDs for creating opportunities
PIPELINE_ID=
NEW_LEAD_STAGE_ID=

# GHL Company ID for V2 user creation API (required for V2 enhanced scope control)
GHL_COMPANY_ID=

# Optional: For user creation feature
# GHL_AGENCY_API_KEY="your_agency_api_key_here"

# Environment Setting: 'development' or 'production'
APP_ENV="development"

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=production

# Domain Configuration
DOMAIN=dockside.life
BASE_URL=https://dockside.life
WEBHOOK_BASE_URL=https://dockside.life/api/v1/webhooks/elementor

# Security
WEBHOOK_SECRET=
GHL_WEBHOOK_API_KEY=

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# SSL Configuration
SSL_ENABLED=True
SSL_CERT_PATH=/etc/ssl/certs/dockside.life.crt
SSL_KEY_PATH=/etc/ssl/private/dockside.life.key

# CORS Configuration
ALLOWED_ORIGINS=https://dockside.life,https://www.dockside.life,https://docksidepros.com,https://www.docksidepros.com

# Database Configuration (SQLite - no changes needed)
DATABASE_URL=sqlite:///./smart_lead_router.db

# Authentication Configuration
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

# Admin User Configuration
ADMIN_EMAIL=info@docksidepros.com
ADMIN_PASSWORD=Docksidepros@2025!
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_ROLE=admin

# Email Configuration for 2FA
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@dockside.life
SMTP_FROM_NAME="Dockside Pro Security"

# 2FA Configuration
TWO_FACTOR_CODE_LENGTH=6
TWO_FACTOR_CODE_EXPIRE_MINUTES=10
TWO_FACTOR_MAX_ATTEMPTS=3

# Security Settings
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# Multi-tenant Configuration
DEFAULT_TENANT_DOMAIN=dockside.life
ALLOW_TENANT_REGISTRATION=false

# Tenant Configuration for Admin Creation
TENANT_DOMAIN=docksidepros.com
TENANT_NOTIFICATION_EMAIL=info@docksidepros.com